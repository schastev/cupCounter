<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="settings_category_behavior"
        app:title="@string/settings_title_behavior">
        <EditTextPreference
            app:defaultValue="5"
            app:key="@string/placeholder_setting_free_cup"
            app:title="@string/settings_line_free_cups" />

        <EditTextPreference
            app:defaultValue="30"
            app:key="@string/placeholder_setting_returning_customer"
            app:title="@string/setting_line_returning_customer" />

    </PreferenceCategory>
    <PreferenceCategory
        app:key="@string/placeholder_setting_admin_actions"
        app:title="@string/settings_category_admin">
        <Preference
            app:key="@string/placeholder_setting_delete"
            app:title="@string/settings_line_delete_customer" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/placeholder_setting_ask_password"
            app:title="@string/settings_line_ask_admin_password" />
        <EditTextPreference
            android:inputType="textPassword"
            app:defaultValue="coffee"
            app:key="@string/placeholder_setting_admin_password"
            app:title="@string/settings_line_change_admin_password" />
    </PreferenceCategory>

</PreferenceScreen>
